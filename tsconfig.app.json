{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@style/*": ["src/style/*"],
      "@components/*": ["src/components/*"],
      "@api/*": ["src/api/*"]
    },
    "verbatimModuleSyntax": false
  }
}
